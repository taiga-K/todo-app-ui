{
  "name": "frontend",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "dev:mock": "vite --mode mock",
    "build": "tsc -b && vite build",
    "lint": "eslint . --max-warnings 0",
    "format": "prettier --write \"src/**/*.{ts,tsx,js,jsx,json,css,md}\"",
    "format:check": "prettier --check \"src/**/*.{ts,tsx,js,jsx,json,css,md}\"",
    "preview": "vite preview",
    "test": "npm run test:unit && npm run lint",
    "test:unit": "vitest run",
    "test:unit:watch": "vitest",
    "test:int": "vitest run --config vitest.config.integration.ts",
    "test:e2e": "playwright test",
    "test:a11y": "playwright test --grep @a11y",
    "api:generate": "openapi-typescript ../specs/001-frontend-plan/contracts/todo-api.openapi.yaml -o ./src/generated/todo.ts",
    "design:sync": "echo 'Theme sync placeholder - implement if needed'",
    "prepare": "cd .. && husky frontend/.husky || true"
  },
  "dependencies": {
    "@dnd-kit/core": "^6",
    "@dnd-kit/utilities": "^3.2.2",
    "@tanstack/react-query": "^5",
    "clsx": "^2.1.1",
    "daisyui": "^4",
    "ky": "^1",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "react-router-dom": "^6.28",
    "tailwind-merge": "^3.3.1",
    "zustand": "^5"
  },
  "devDependencies": {
    "@dnd-kit/sortable": "^8",
    "@eslint/js": "^9.36.0",
    "@playwright/test": "^1.51",
    "@testing-library/react": "^16",
    "@testing-library/user-event": "^14",
    "@types/node": "^24.6.0",
    "@types/react": "^19.1.16",
    "@types/react-dom": "^19.1.9",
    "@vitejs/plugin-react": "^5.0.4",
    "autoprefixer": "^10",
    "eslint": "^9.36.0",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-react-refresh": "^0.4.22",
    "globals": "^16.4.0",
    "openapi-typescript": "^7",
    "postcss": "^8",
    "prettier": "^3",
    "prettier-plugin-tailwindcss": "^0.6",
    "tailwindcss": "^3",
    "typescript": "~5.9.3",
    "typescript-eslint": "^8.45.0",
    "vite": "^7.1.7",
    "vitest": "^2"
  }
}
